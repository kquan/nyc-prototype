<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                tools:ignore="MissingPrefix"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:id="@+id/debug_profile_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/debug_name"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="4dp"
        android:textSize="16sp"
        android:layout_toRightOf="@+id/debug_profile_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        fontPath="fonts/Roboto-Light.ttf"/>

    <TextView
        android:id="@+id/debug_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="4dp"
        android:layout_toRightOf="@+id/debug_profile_photo"
        android:layout_below="@+id/debug_name"
        android:singleLine="true"
        android:ellipsize="end"
        fontPath="fonts/Roboto-Light.ttf"/>

    <TextView
        android:id="@+id/samsung_id_header"
        android:layout_width="wrap_content"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/debug_profile_photo"
        android:layout_below="@+id/debug_email"
        android:text="Samsung ID:"
        android:textSize="12sp"
        fontPath="fonts/Roboto-Bold.ttf"/>

    <TextView
        android:id="@+id/samsung_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/samsung_id_header"
        android:layout_below="@+id/debug_email"
        android:singleLine="true"
        android:ellipsize="end"
        fontPath="fonts/Roboto-Light.ttf"/>

    <TextView
        android:id="@+id/debug_accounts_header"
        android:layout_below="@+id/debug_profile_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="12sp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:text="Found email accounts"
        fontPath="fonts/Roboto-Bold.ttf"/>

    <ListView
        android:id="@+id/debug_accounts"
        android:layout_below="@+id/debug_accounts_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>