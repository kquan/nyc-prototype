<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                tools:ignore="MissingPrefix"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/logged_in_holder"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/current_user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/logoff"
            android:layout_below="@+id/current_user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logoff"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/signup_holder"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/start_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start signup"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/verification_holder"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/waiting_for_verification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waiting for phone number verification"/>

        <Button
            android:id="@+id/request_verification"
            android:layout_below="@+id/waiting_for_verification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Request verification again"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/current_phone"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/current_device_id"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/current_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>


</RelativeLayout>